<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.eng.helloworld">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/main_activity_title"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageButtonActivity"
            android:label="@string/title_activity_display_message_button"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".DisplayPhotoDialogActivity"
            android:label="@string/title_activity_display_photo_dialog"
            android:theme="@style/Theme.AppCompat.Dialog"></activity>
    </application>

</manifest>